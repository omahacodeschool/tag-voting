<div class="container">
  
  <h2>Nominations</h2>
  
  <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>

  <div id="production_form_container">
    <%= render partial: "production_form", locals: {ballot: @ballot}  %>
  </div>

  <div>
  <h3 class="text-danger">Award Category Nominations:</h3>
  <p>Please write in up to five nominations for each category. You may only nominate for productions which you have seen:</p>
    <%= form_for @ballot do |f| %>
      <%= f.fields_for :nominations, @nominations do |ff| %>
        <h4><%= ff.object.award.title %></h4>
          <div class="well">
          <%= ff.label :nom1 %>
          <%= ff.text_field :nom1 %><br>
          <%= ff.label :nom2 %>
          <%= ff.text_field :nom2 %><br>
          <%= ff.label :nom3 %>
          <%= ff.text_field :nom3 %><br>
          <%= ff.label :nom4 %>
          <%= ff.text_field :nom4 %><br>
          <%= ff.label :nom5 %>
          <%= ff.text_field :nom5 %><br>
          </div>
      <% end %>
     <p><%= f.submit "Submit Nominations", class: "btn btn-success" %></p>
    <% end %>
   </div>
</div>